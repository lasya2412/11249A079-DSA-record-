def next_greater_element(arr):
    stack = []
    result = [-1] * len(arr)  # Initialize result array with -1 
    for i in range(len(arr)):
        while stack and arr[stack[-1]] < arr[i]:
            index = stack.pop()
            result[index] = arr[i]  # Set the next greater element for that index
        stack.append(i)  # Push current index onto the stack
    
    return result

# Test the function
arr = [4, 5, 2, 10, 8]
print(next_greater_element(arr))
