# Binary Search Algorithm
def binary_search(arr, target):
    # Set initial left and right pointers
    left = 0
    right = len(arr) - 1
    
    # Continue the search while the left pointer is less than or equal to the right pointer
    while left <= right:
        mid = left + (right - left) // 2  # Calculate the middle index
        
        # If target is found at mid index
        if arr[mid] == target:
            return mid
        
        # If target is greater than mid, search in the right half
        elif arr[mid] < target:
            left = mid + 1
        
        # If target is smaller than mid, search in the left half
        else:
            right = mid - 1
    
    return -1  # Return -1 if the target is not found

# Test the binary search function
arr = [1, 2, 5, 6, 9, 15, 20]
target = 9

result = binary_search(arr, target)

if result != -1:
    print(f"Element {target} is present at index {result}.")
else:
    print(f"Element {target} is not in the list.")
